#!/usr/bin/env bash

## rsync-segway.sh: rsync directories excluding big Segway data files

## $Revision$
## Copyright 2010-2011 Michael M. Hoffman <mmh1@uw.edu>

set -o nounset
set -o pipefail
set -o errexit

if [ $# != 1 ]; then
    echo usage: "$0" HOST
    exit 2
fi

rsync -rtvz --links --exclude output --exclude posterior \
    --exclude viterbi \
    --exclude observations --exclude "*.observations" --exclude accumulators \
    $1:${PWD/$HOME/'~'}/ .
